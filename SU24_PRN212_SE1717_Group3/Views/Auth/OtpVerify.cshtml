
@{
	ViewData["Title"] = "OTP";
}
<link href="~/css/Login.css" rel="stylesheet" />
@* <img class="source-image" src="~/img/Logo.png" alt="" hidden> *@
<div class="login-container">
	<div class="Wrapper">
		<div id="forgot-box" class="forgot-box">
			<form asp-action="OtpVerify" asp-controller="Auth" method="post" class="login">
				<h2>OTP Verification</h2>

				<div class="input-box">
					<input type="text" name="otp" required>
					<i class="fa-solid fa-envelope"></i>
					<label>OTP</label>
					<span></span>

				</div>
				<button type="submit" class="btn btn-hover color-6">Sumit</button>
				<div class="login-register">
					<p>
						Please enter your OTP to verify your email.
					</p>
				</div>
			</form>
		</div>
	</div>
</div>