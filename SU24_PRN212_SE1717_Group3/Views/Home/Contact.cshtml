<link href="~/css/Contact.css" rel="stylesheet" />

<div class="container">
    <div class="title">
        <h3 class="title-header">
            <strong>Ready To Get Started?</strong>
        </h3>
        <h4 class="title-content">
            Your email address will not be published. Required fields are marked.
        </h4>
    </div>
    <div class="form-container">
        <form asp-action="Contact" asp-controller="Home" method="POST" enctype="multipart/form-data" class="form-input" data-form-title="Form Name">
            <input type="hidden" name="email" data-form-email="true" value="" />
            <div class="">
                <div hidden="hidden" data-form-alert="" class="">
                    Thanks for filling out the form!
                </div>
                <div hidden="hidden" data-form-alert-danger="" class="">
                    Oops...! Some problem!
                </div>
            </div>
            <div class="">
                <div class="">
                    <input type="text" name="name" placeholder="Name" data-form-field="name" class="" value=""
                           id="name-form02-0" />
                </div>
                <div class="">
                    <input type="email" name="email" placeholder="E-mail" data-form-field="email" class="" value=""
                           id="email-form02-0" />
                </div>
                <div class="">
                    <input type="tel" name="phone" placeholder="Phone" data-form-field="phone" class="" value=""
                           id="phone-form02-0" />
                </div>
                <div class="">
                    <textarea name="textarea" placeholder="Message" data-form-field="textarea" class="form-control"
                              id=""></textarea>
                </div>
                <div class="image-input" data-for="image">
                    <label class="file">
                        <input type="file" id="file" aria-label="File browser example" onchange="updateImagePreview(this)">
                        <span class="file-custom"></span>
                    </label>
                </div>
                <img alt="Selected Image" id="image-preview" style="display: none" />
                <div class="form-button">
                    <button type="submit" class="" onclick="submitForm()">
                        Send
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
