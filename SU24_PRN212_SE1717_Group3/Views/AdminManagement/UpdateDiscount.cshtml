@{
}
<link href="~/css/AddDiscount.css" rel="stylesheet" />
<body>
    <div class="form-container">
        <h1>Edit Voucher</h1>
        <form asp-action="UpdateDiscount" method="post">
            <input asp-for="Id" type="hidden" value="@Model.Id" />

            <label for="name">Name:</label>
            <input asp-for="Name" type="text" id="name" name="name" value="@Model.Name" placeholder="Enter voucher name..." required>

            <label for="description">Description:</label>
            <textarea asp-for="Description" id="description" name="description" rows="4" placeholder="Enter description..." required>@Model.Description</textarea>

            <label for="percent">Discount Percentage:</label>
            <input asp-for="Percent" type="number" id="percent" name="percent" value="@Model.Percent" placeholder="Enter discount percentage..." step="0.01" min="0" max="100" required>

            <input asp-for="Validity" type="hidden" value="@Model.Validity" />

            <label for="quantity">Quantity:</label>
            <input asp-for="Quantity" type="number" id="quantity" name="quantity" value="@Model.Quantity" placeholder="Enter quantity..." min="1" required>

            <button type="submit">Save Changes</button>
        </form>
    </div>
</body>
